generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Character {
  id        String   @id @default(cuid()) @map("_id") @db.ObjectId
  name      String
  // anotherNames String[]
  // kingdom  String
  // titles   String[]
  status   String
  // spouse  String
  race String
  // brothers String[]
  // sisters String[]
  // children String[]
  // culture String
  // hairColor String
  // eyeColor String
  // height String
  // death String
  // age       Int
  // weapon    String
  // country    String
  // father   String
  // mother   String
  description String
  image String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}